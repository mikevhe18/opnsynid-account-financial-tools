<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="account_journal_view_form" model="ir.ui.view">
            <field name="name">Inherit : Account Journal Form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Bank Statement Policy" attrs="{'invisible': [('type','&lt;&gt;','bank')]}">
                    </page>
                    <page string="Cash Register Policy" attrs="{'invisible': [('type','&lt;&gt;','cash')]}">
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
